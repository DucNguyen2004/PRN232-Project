@page
@model FUNewsManagement.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="AccountModel.Email" class="form-control" />
        <span asp-validation-for="AccountModel.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="AccountModel.Password" type="password" class="form-control" />
        <span asp-validation-for="AccountModel.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
